<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="HackPDM.Forms.Settings.StatusDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataGrid="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rep="using:HackPDM.Data"
    xmlns:ui="using:CommunityToolkit.WinUI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid
        Width="968"
        Height="505"
        Background="{ThemeResource Theme_BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  Top Half: Status Log (Important Actions)  -->
        <Grid Grid.Row="0" Margin="8,8,8,4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="128" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <dataGrid:DataGrid
                x:Name="StatusList"
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Margin="0,0,0,0"
                AutoGenerateColumns="False">
                <!--  Example log entry  -->
                <dataGrid:DataGrid.Columns>
                    <dataGrid:DataGridTextColumn
                        Width="128"
                        Binding="{Binding Action}"
                        CanUserSort="True"
                        Header="ID" />
                    <dataGrid:DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding Description}"
                        CanUserSort="True"
                        Header="Name" />
                </dataGrid:DataGrid.Columns>
            </dataGrid:DataGrid>
        </Grid>
        <!--  Bottom Half: Two Logs Side-by-Side  -->
        <Grid Grid.Row="1" Margin="8,4,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  Skipped Actions Log  -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="128" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                </Grid>
                <dataGrid:DataGrid
                    x:Name="InfoList"
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    Margin="0,0,0,0"
                    VerticalAlignment="Stretch"
                    AutoGenerateColumns="False">
                    <!--  Example log entry  -->
                    <dataGrid:DataGrid.Columns>
                        <dataGrid:DataGridTextColumn
                            Width="128"
                            Binding="{Binding Action}"
                            CanUserSort="True"
                            Header="ID" />
                        <dataGrid:DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding Description}"
                            CanUserSort="True"
                            Header="Name" />
                    </dataGrid:DataGrid.Columns>
                </dataGrid:DataGrid>

            </Grid>
            <!--  Errors / Warnings Log  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="128" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                </Grid>
                <dataGrid:DataGrid
                    x:Name="ErrorList"
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    Margin="0,0,0,0"
                    VerticalAlignment="Stretch"
                    AutoGenerateColumns="False">
                    <!--  Example log entry  -->
                    <dataGrid:DataGrid.Columns>
                        <dataGrid:DataGridTextColumn
                            Width="128"
                            Binding="{Binding Action}"
                            CanUserSort="True"
                            Header="ID" />
                        <dataGrid:DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding Description}"
                            CanUserSort="True"
                            Header="Name" />
                    </dataGrid:DataGrid.Columns>
                </dataGrid:DataGrid>
            </Grid>
        </Grid>
        <!--  Bottom Controls: ProgressBar, Status, and Buttons  -->
        <Grid Grid.Row="2" Margin="8,0,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--  Progress Bar  -->
            <ProgressBar
                x:Name="fileCheckStatus"
                Grid.Column="4"
                Height="24"
                Margin="8,0,8,0"
                VerticalAlignment="Center"
                Maximum="100"
                Minimum="0"
                Value="15.3" />
            <!--  Progress Percentage Text (middle, above bar)  -->
            <StackPanel
                Grid.Column="4"
                Margin="0,0,0,28"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <TextBlock FontWeight="Bold" Text="Progress: " />
                <TextBlock x:Name="ProgressText" Text="(15.3%)" />
            </StackPanel>
            <!--  Total Downloaded (left of bar)  -->
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock FontWeight="Bold" Text="Total downloaded: " />
                <TextBlock x:Name="TotalDownload" Text="900.2 MB" />
            </StackPanel>
            <!--  Downloaded Current and Skipped Files (right of bar, stacked)  -->
            <StackPanel
                Grid.Column="7"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Text="Downloaded: " />
                    <TextBlock x:Name="Downloaded" Text="150.5 MB" />
                </StackPanel>
                <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Text="Skipped: " />
                    <TextBlock x:Name="SkippedLabel" Text="8 files" />
                </StackPanel>
            </StackPanel>
            <!--  Settings Button  -->
            <Button
                x:Name="StatusSettings"
                Grid.Column="10"
                Width="40"
                Height="40"
                VerticalAlignment="Center"
                ToolTipService.ToolTip="Settings">
                <Image Source="https://img.icons8.com/ios-filled/40/000000/settings.png" />
            </Button>
            <!--  Cancel Button  -->
            <Button
                x:Name="cmdCancel"
                Grid.Column="12"
                Width="40"
                Height="40"
                Margin="0,0,0,0"
                VerticalAlignment="Center"
                ToolTipService.ToolTip="Cancel">
                <Image Source="https://img.icons8.com/ios-filled/40/000000/cancel.png" />
            </Button>
            <!--  Close Button  -->
            <Button
                x:Name="cmdClose"
                Grid.Column="14"
                Width="40"
                Height="40"
                Margin="0,0,0,0"
                VerticalAlignment="Center"
                ToolTipService.ToolTip="Close">
                <Image Source="https://img.icons8.com/ios-filled/40/000000/close-window.png" />
            </Button>
        </Grid>
    </Grid>
</Page>
