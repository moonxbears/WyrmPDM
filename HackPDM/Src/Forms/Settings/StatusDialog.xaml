<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="HackPDM.Forms.Settings.StatusDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:rep="using:HackPDM.Data"
    xmlns:com="using:CommunityToolkit.WinUI.UI.Controls" 
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Main Status List -->
        <com:DataGrid 
            x:Name="StatusList" 
            ItemsSource="{x:Bind OStatus, Mode=OneWay}"
            Grid.Row="0" 
            Grid.ColumnSpan="2" 
            Height="224" 
            Margin="0,0,0,5"
            AutoGenerateColumns="False"
            CanUserSortColumns="False"
            IsReadOnly="True"
            RowDetailsVisibilityMode="Collapsed">
            <com:DataGrid.Columns>
                <com:DataGridTextColumn Binding="{Binding Status}" Header="Action" Width="120"/>
                <com:DataGridTextColumn Binding="{Binding Message}" Header="Description" Width="1158"/>
            </com:DataGrid.Columns>
        </com:DataGrid>

        <!-- Splitter between StatusList and the two lower lists -->
        <SplitView Grid.Row="1" Grid.ColumnSpan="2" Height="5" HorizontalAlignment="Stretch" Background="Gray"/>

        <!-- Info List -->
        <com:DataGrid 
            x:Name="InfoList" 
            ItemsSource="{x:Bind OInfo, Mode=OneWay}"
            Grid.Row="2" 
            Grid.Column="0" 
            Margin="0,5,5,5"
            AutoGenerateColumns="False"
            CanUserSortColumns="False"
            IsReadOnly="True"
            RowDetailsVisibilityMode="Collapsed">
            <com:DataGrid.Columns>
                <com:DataGridTextColumn Binding="{Binding Status}" Header="Action" Width="120"/>
                <com:DataGridTextColumn Binding="{Binding Message}" Header="Description" Width="1158"/>
            </com:DataGrid.Columns>
        </com:DataGrid>

        <!-- Splitter between InfoList and ErrorList -->
        <AppBarSeparator Grid.Row="2" Grid.Column="0" Width="5" Background="Gray"/>

        <!-- Error List -->
        <com:DataGrid 
            x:Name="ErrorList" 
            ItemsSource="{x:Bind OError, Mode=OneWay}"
            Grid.Row="2" 
            Grid.Column="1" 
            Margin="5,5,0,5"
            AutoGenerateColumns="False"
            CanUserSortColumns="False"
            IsReadOnly="True"
            RowDetailsVisibilityMode="Collapsed">
            <com:DataGrid.Columns>
                <com:DataGridTextColumn Binding="{Binding Status}" Header="Action" Width="120"/>
                <com:DataGridTextColumn Binding="{Binding Message}" Header="Description" Width="1158"/>
            </com:DataGrid.Columns>
        </com:DataGrid>

        <!-- Progress Bar -->
        <ProgressBar x:Name="fileCheckStatus" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="15"/>

        <!-- Progress Text and Status Labels -->
        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom">
            <TextBlock x:Name="ProgressText" Text="(0%)&#x0a;0 / 0" Margin="0,0,10,0"/>
            <TextBlock x:Name="Downloaded" Text="Downloaded: " Margin="0,0,10,0"/>
            <TextBlock x:Name="TotalDownload" Text="Total Downloaded: " Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Skipped Label -->
        <TextBlock x:Name="SkippedLabel" Text="(0) Skipped" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="StatusSettings" Content="configure settings" Margin="0,0,10,0"/>
            <CheckBox x:Name="cbxAutoClose" Content="Close When Complete" Margin="0,0,10,0"/>
            <Button x:Name="cmdCancel" Content="Cancel" Margin="0,0,10,0"/>
            <Button x:Name="cmdClose" Content="Close"/>
        </StackPanel>
        <Grid.Resources>

            <Style TargetType="ListViewItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            </Style>
            
        </Grid.Resources>
    </Grid>
</Page>
