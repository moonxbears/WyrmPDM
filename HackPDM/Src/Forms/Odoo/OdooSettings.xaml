<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="HackPDM.Src.Forms.Odoo.OdooSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Odoo Address  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Text="Odoo Address" />
        <TextBox
            x:Name="txtOdooAddress"
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,5,0,5" />

        <!--  Odoo Port  -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Text="Odoo Port" />
        <TextBox
            x:Name="txtOdooPort"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,5,0,5" />

        <!--  Odoo DB  -->
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Text="Odoo DB" />
        <TextBox
            x:Name="txtOdooDb"
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,5,0,5" />

        <!--  Odoo User  -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Text="Odoo User" />
        <TextBox
            x:Name="txtOdooUser"
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,5,0,5" />

        <!--  Odoo Pass  -->
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Text="Odoo Pass" />
        <PasswordBox
            x:Name="txtOdooPass"
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,5,0,5" />

        <!--  SW Key  -->
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Text="SW Key" />
        <TextBox
            x:Name="txtSwKey"
            Grid.Row="5"
            Grid.Column="1"
            Margin="0,5,0,5" />

        <!--  Area Factor  -->
        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Text="Area Factor" />
        <TextBox
            x:Name="txtAreaFactor"
            Grid.Row="6"
            Grid.Column="1"
            Margin="0,5,0,5" />

        <!--  Submit Button  -->
        <Button
            x:Name="btnSubmit"
            Grid.Row="7"
            Grid.Column="1"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Content="Submit" />
    </Grid>
</Page>

